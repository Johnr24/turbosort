# Volume paths for turbosort
# Replace these paths with your actual directory paths
SOURCE_VOLUME=/path/to/your/source/directory
DESTINATION_VOLUME=/path/to/your/destination/directory
HISTORY_VOLUME=./history
# Set to true to enable year prefix extraction from .turbosort path
ENABLE_YEAR_PREFIX=false
# Set to true to force re-copy of all files regardless of history
FORCE_RECOPY=false
# How often to perform a full rescan (in seconds), 0 to disable
RESCAN_INTERVAL=60
# Control whether to add a drive suffix to destination paths (set to false to disable)
ENABLE_DRIVE_SUFFIX=true
# The suffix to append to destination paths when ENABLE_DRIVE_SUFFIX is true
DRIVE_SUFFIX=incoming

# S3 configuration (set USE_S3_SOURCE to true to enable)
USE_S3_SOURCE=false
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=turbosort-source
S3_PATH_PREFIX=
S3_REGION=us-east-1
# S3 polling interval in seconds (how often to check for changes)
S3_POLL_INTERVAL=30 